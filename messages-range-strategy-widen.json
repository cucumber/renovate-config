{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Widen ranges for Cucumber Messages, Gherkin and Query dependencies",
  "packageRules": [
    {
      "matchManagers": "composer",
      "matchPackageNames": [
        "cucumber/messages",
        "cucumber/gherkin",
        "cucumber/query"
      ],
      "rangeStrategy": "widen"
    },
    {
      "matchManagers": "cpanfile",
      "matchPackageNames": [
        "Cucumber::Messages",
        "Cucumber::Gherkin",
        "Cucumber::Query"
      ],
      "rangeStrategy": "widen"
    },
    {
      "matchManagers": "maven",
      "matchPackageNames": [
        "io.cucumber:messages",
        "io.cucumber:gherkin",
        "io.cucumber:query"
      ],
      "rangeStrategy": "widen"
    },
    {
      "matchManagers": "mix",
      "matchPackageNames": [
        "cucumber_messages",
        "cucumber_gherkin",
        "cucumber_query"
      ],
      "rangeStrategy": "widen"
    },
    {
      "matchManagers": "npm",
      "matchPackageNames": [
        "@cucumber/messages",
        "@cucumber/gherkin",
        "@cucumber/query"
      ],
      "rangeStrategy": "widen"
    }
  ]
}
