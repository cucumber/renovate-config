{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Widen ranges for Cucumber Messages, Gherkin and Query dependencies",
  "packageRules": [
    {
      "matchPackageName": [
        "@cucumber/messages",
        "cucumber/messages",
        "cucumber_messages",
        "io.cucumber:messages"
      ],
      "rangeStrategy": "widen"
    }
  ]
}
